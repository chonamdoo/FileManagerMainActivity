<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:background="@color/sdinfo_bg_color"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/sd_file_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:contentDescription="@string/description"
        android:src="@drawable/folder" />

    <TextView
        android:id="@+id/sd_file_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Android" />

    <TextView
        android:id="@+id/sd_file_size"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="100m" />

</LinearLayout><!-- From: file:/C:/Users/文杰/Desktop/android/FileManagerMainActivity/res/layout/sd_file_info_item.xml -->